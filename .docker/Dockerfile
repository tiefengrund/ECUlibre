FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends build-essential git ca-certificates openssh-client  && rm -rf /var/lib/apt/lists/*
COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt
WORKDIR /app
COPY scripts/analyze_med17.py /app/analyze_med17.py
ENTRYPOINT ["python", "/app/analyze_med17.py"]
